<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/colorContentContainer"
    tools:parentTag="android.widget.FrameLayout">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/docs_recycler_view_padding"
        android:paddingStart="@dimen/docs_recycler_view_padding"
        android:paddingEnd="@dimen/docs_recycler_view_padding"
        android:paddingBottom="@dimen/docs_recycler_view_padding_bottom"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="none"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/colorProgressBar"/>

    <com.paulrybitskyi.commons.widgets.InfoView
        android:id="@+id/infoView"
        android:layout_gravity="center"
        app:infoView_icon="@drawable/file_document_multiple_outline"
        app:infoView_titleText="@string/docs_info_view_title"
        style="@style/DocSkanner.InfoView"/>

</merge>