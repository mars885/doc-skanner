<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorContentContainer">

    <com.paulrybitskyi.commons.widgets.toolbar.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:toolbar_titleText="@string/doc_editing_toolbar_title"
        app:toolbar_leftButtonIcon="@drawable/arrow_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/DocSkanner.Toolbar"/>

    <com.paulrybitskyi.docskanner.ui.views.DocCropperView
        android:id="@+id/cropperView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/doc_editing_cropper_vertical_margin"
        android:layout_marginBottom="@dimen/doc_editing_cropper_vertical_margin"
        android:layout_marginStart="@dimen/doc_editing_cropper_horizontal_margin"
        android:layout_marginEnd="@dimen/doc_editing_cropper_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/rotateLeftBtnTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/rotateLeftBtnTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/doc_editing_button_margin"
        android:layout_marginEnd="@dimen/doc_editing_rotate_button_touch_margin"
        android:layout_marginBottom="@dimen/doc_editing_button_margin"
        android:text="@string/action_rotate_left"
        app:layout_constraintBottom_toTopOf="@+id/confirmBtnTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rotateRightBtnTv"
        style="@style/DocSkanner.Button"/>

    <TextView
        android:id="@+id/rotateRightBtnTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/doc_editing_rotate_button_touch_margin"
        android:layout_marginEnd="@dimen/doc_editing_button_margin"
        android:layout_marginBottom="@dimen/doc_editing_button_margin"
        android:text="@string/action_rotate_right"
        app:layout_constraintBottom_toTopOf="@+id/confirmBtnTv"
        app:layout_constraintStart_toEndOf="@id/rotateLeftBtnTv"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/DocSkanner.Button"/>

    <TextView
        android:id="@+id/confirmBtnTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/doc_editing_button_margin"
        android:layout_marginEnd="@dimen/doc_editing_button_margin"
        android:layout_marginBottom="@dimen/doc_editing_button_margin"
        android:text="@string/action_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/DocSkanner.Button"/>

</androidx.constraintlayout.widget.ConstraintLayout>