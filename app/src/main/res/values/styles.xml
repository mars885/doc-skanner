<resources>

    <style name="DocSkannerTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorContentContainer</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>    <!-- EditText's Cursor Color -->

        <item name="md_corner_radius">@dimen/dialog_corner_radius</item>
        <item name="md_background_color">@color/dialog_background_color</item>
        <item name="md_color_title">@color/dialog_title_color</item>
        <item name="md_color_content">@color/dialog_content_color</item>
        <item name="md_color_widget">@color/dialog_widget_color</item>
        <item name="md_color_widget_unchecked">@color/dialog_widget_color</item>
        <item name="md_color_button_text">@color/colorPrimaryText</item>
    </style>

    <style name="DefStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"/>

    <style name="DocSkannerTheme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="DocSkanner"/>

    <style name="DocSkanner.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="toolbar_titleTextColor">@color/toolbar_title_text_color</item>
        <item name="toolbar_buttonIconColor">@color/toolbar_button_icon_color</item>
        <item name="toolbar_titleTextSize">@dimen/toolbar_title_text_size</item>
        <item name="toolbar_titleTextGravity">left</item>
    </style>

    <style name="DocSkanner.InfoView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/default_info_view_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_info_view_horizontal_margin</item>
        <item name="infoView_iconSize">@dimen/default_info_view_icon_size</item>
        <item name="infoView_iconColor">@color/colorInfoView</item>
        <item name="infoView_titleTextColor">@color/colorInfoView</item>
        <item name="infoView_titleTextTopMargin">@dimen/default_info_view_title_text_top_margin</item>
        <item name="infoView_titleTextSize">@dimen/default_info_view_title_text_size</item>
    </style>

    <style name="DocSkanner.Button">
        <item name="android:background">@drawable/button_background_drawable</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="DocSkanner.Editor"/>

    <style name="DocSkanner.Editor.Effect">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/doc_editor_effect_bg_drawable</item>
        <item name="android:paddingTop">@dimen/doc_editor_effect_padding_top</item>
        <item name="android:paddingBottom">@dimen/doc_editor_effect_padding_bottom</item>
        <item name="android:paddingStart">@dimen/doc_editor_effect_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/doc_editor_effect_horizontal_padding</item>
        <item name="infoView_iconSize">@dimen/doc_editor_effect_icon_size</item>
        <item name="infoView_iconColor">@color/doc_editor_effect_state_default_content_color</item>
        <item name="infoView_titleTextSize">@dimen/doc_editor_effect_title_size</item>
        <item name="infoView_titleTextColor">@color/doc_editor_effect_state_default_content_color</item>
        <item name="layout_constraintTop_toBottomOf">@id/toolbar</item>
    </style>

</resources>