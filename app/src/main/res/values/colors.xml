<resources>

    <color name="colorPrimary">#333436</color>
    <color name="colorPrimaryDark">#1e1f21</color>
    <color name="colorAccent">#1191d0</color>
    <color name="colorContentContainer">#242526</color>
    <color name="colorPrimaryText">@android:color/white</color>
    <color name="colorSecondaryText">#a1a8b0</color>
    <color name="colorSecondaryDarkText">#83898e</color>
    <color name="colorNavigationBar">#2c2d2e</color>
    <color name="colorProgressBar">@color/colorAccent</color>
    <color name="colorInfoView">@color/colorSecondaryText</color>
    <color name="colorShadow">#33000000</color>

    <!-- Toolbar -->
    <color name="toolbar_background_color">@color/colorPrimary</color>
    <color name="toolbar_title_text_color">@color/colorPrimaryText</color>
    <color name="toolbar_button_icon_color">@color/colorPrimaryText</color>

    <!-- Dialogs -->
    <color name="dialog_background_color">@color/colorPrimary</color>
    <color name="dialog_title_color">@color/colorPrimaryText</color>
    <color name="dialog_content_color">@color/colorPrimaryText</color>
    <color name="dialog_widget_color">@color/colorAccent</color>
    <color name="dialog_input_underline_color">@color/colorAccent</color>
    <color name="dialog_input_text_color">@color/colorPrimaryText</color>
    <color name="dialog_button_color">@color/colorPrimaryText</color>

    <!-- DocView -->
    <color name="doc_card_background_color">@color/colorPrimary</color>
    <color name="doc_icon_color">@color/colorSecondaryText</color>
    <color name="doc_name_color">@color/colorSecondaryText</color>
    <color name="doc_details_color">@color/colorSecondaryDarkText</color>

    <!-- DocCropBorderView -->
    <color name="doc_crop_border_valid_shape_line_color">#00be75</color>
    <color name="doc_crop_border_invalid_shape_line_color">#cc2e4e</color>
    <color name="doc_crop_border_handle_stroke_color">@color/colorAccent</color>
    <color name="doc_crop_border_handle_inner_color">#881191d0</color>

    <!-- DashboardFragment -->
    <color name="dashboard_docs_background">@color/colorContentContainer</color>
    <color name="dashboard_scan_btn_background">@color/colorAccent</color>
    <color name="dashboard_scan_btn_icon_color">@color/colorPrimaryText</color>

    <!-- DocPreviewFragment -->
    <color name="doc_preview_container_background">@color/colorContentContainer</color>
    <color name="doc_preview_artificial_shadow">#66000000</color>

    <!-- DocEditorFragment -->
    <color name="doc_editor_effect_background_color">@color/colorPrimary</color>
    <color name="doc_editor_effect_state_default_content_color">@color/colorSecondaryText</color>
    <color name="doc_editor_effect_state_selected_content_color">#06c47b</color>

</resources>